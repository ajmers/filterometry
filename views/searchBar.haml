.container-fluid
    - if !@index
        %a.navbar-brand{:href => "/"} Filterometry
    %form#user-search.navbar-form.navbar-right{ :action => '/search', :method => 'GET'}
        %div.form-group
            %input.form-control{ :type => "text", :placeholder => "Search", :name => 'searchTerm' }
        %button.user-search.search-btn.btn.btn-default{ :type => "submit" }
        - if !@signed_in
            %a.btn.btn-success.auth{:href => '/oauth/connect'}Connect with Instagram

%script{'defer' => true, 'src' => '../scripts/search.js'}
