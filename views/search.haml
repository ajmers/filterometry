%html
    %head
        %title Find a User

    %body
        %div.col-lg-6
            %div.well.bs-component
                %h1 Search for a user by name

                %form{:method => "POST"}
                    %fieldset
                        %div.form-group
                            %label.col-log-2.control-label{:for => "username"} Username
                            %div.col-lg-10
                                %input#username.form-control{:type => "text", :name => "username"}

                        %div.form-group
                            %div.col-lg-10
                                %button.btn.btn-primary{:type => "submit"} Submit

